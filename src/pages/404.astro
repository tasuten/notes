---
import Standard from '@layouts/Standard.astro';
const base = import.meta.env.BASE_URL;
---

<style>
  #not-found {
    text-align: center;
  }
  #not-found h1 {
    margin-top: 5rem;
    margin-bottom: 8rem;
  }
</style>

<Standard title="404 Not Found" description="404 Not Found">
  <section id="not-found">
    <h1>404 Not Found</h1>
    <p>
      <a href={base}>トップページ</a>に記事一覧などがあります。
    </p>
  </section>
</Standard>
